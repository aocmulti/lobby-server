<div class="chat-messages">
  {{#each chatMessages}}
    {{view App.ChatMessageView}}
  {{/each}}
</div>
<div class="input-group">
  {{view App.TextField autofocus=true context=this value=chatMessage}}
  <span class="input-group-btn">
    <button class="btn btn-default" type="button" {{action "sendChat"}}>Send</button>
  </span>
</div>